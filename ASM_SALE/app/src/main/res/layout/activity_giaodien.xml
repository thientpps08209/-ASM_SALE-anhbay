<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5.5dp"

    android:background="@drawable/gradient02"
    tools:context=".Screen.GiaodienActivity">


    <TextView
        android:id="@+id/tv_tid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="DANH MỤC SẢN PHẨM"/>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_marginTop="35dp"
            android:padding="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_p1"
                android:layout_width="130dp"
                android:layout_height="131dp"
                android:layout_rowWeight="1"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/sharp4"
                app:srcCompat="@drawable/applefpt" />

            <ImageView
                android:id="@+id/iv_p2"
                android:layout_width="130dp"
                android:layout_height="131dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/sharp4"
                app:srcCompat="@drawable/kio" />

            <ImageView
                android:id="@+id/iv_p3"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:background="@drawable/sharp4"
                app:srcCompat="@drawable/huwei2" />




        </GridLayout>

        <GridLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_p1"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:text="Sản phẩm 1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#F80909"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_p2"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_row="0"

                android:layout_column="1"
                android:text="Sản phẩm 2"
                android:textStyle="bold"
                android:textColor="#F80909"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_p3"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Sản phẩm 3"
                android:textColor="#F80909"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp" />
        </GridLayout>

        <GridLayout
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_p4"
                android:layout_width="130dp"
                android:layout_height="131dp"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/sharp4"
                app:srcCompat="@drawable/nokia9" />

            <ImageView
                android:id="@+id/iv_p5"
                android:layout_width="130dp"
                android:layout_height="131dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/sharp4"
                app:srcCompat="@drawable/oppologo" />

            <ImageView
                android:id="@+id/iv_p6"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_marginRight="5dp"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:background="@drawable/sharp4"
                app:srcCompat="@drawable/samsung2" />




        </GridLayout>

        <GridLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_p4"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:text="Sản phẩm 4"
                android:textStyle="bold"
                android:textColor="#F80909"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_p5"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_row="0"

                android:layout_column="1"
                android:text="Sản phẩm 5"
                android:textStyle="bold"
                android:textColor="#F80909"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_p6"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Sản phẩm 6"
                android:textStyle="bold"
                android:textColor="#F80909"
                android:textAlignment="center"
                android:textSize="20dp" />
        </GridLayout>



    </LinearLayout>




</LinearLayout>